{
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "env": {
    "browser": true,
    "jest": true
  },
  "globals": {
    "page": true,
    "browser": true,
    "context": true,
    "jestPuppeteer": true
  },
  "rules": {
    "prettier/prettier": ["error"],
    "class-methods-use-this": "off",
    "strict": "off",
    "no-plusplus": "off",
    "linebreak-style": "off",
    "no-restricted-syntax": "off",
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ]
  }
}
